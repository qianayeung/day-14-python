# Showcase the data
import pandas as pd
df = pd.read_csv('International sale Report.csv')
pd.options.display.max_rows = 100
print(df)

# Sort out the most common product styles
import pandas as pd

# Assuming df is the DataFrame containing the data
# Removing 'SHIPPING' column from the list
filtered_df = df[df['Style'] != 'SHIPPING']

# Extracting the top performing products
most_common_codes = filtered_df['Style'].value_counts().head()

print(most_common_codes)

import pandas as pd

# Assuming df is the DataFrame containing the data
# Compute the value counts for the 'Style' column
value_counts = df['Style'].value_counts()

# Extracting the least performing product styles
least_common_codes = value_counts.sort_values().head()

print(least_common_codes)

# sort_values(): This method sorts the values in the Series in ascending order by default. 

# Sort out the top selling SKU
import pandas as pd
sku_transactions = pd.read_csv('International sale Report.csv')
# Identify the most repeated customer
most_repeated_customer = sku_transactions['CUSTOMER'].value_counts().idxmax()
# Filter transactions for the most repeated customers
customer_transactions = sku_transactions[sku_transactions['CUSTOMER'] == most_repeated_customer]
# Extract product SKUs
product_skus = customer_transactions['SKU']
# Count frequency of each product SKU
sku_frequency = product_skus.value_counts()
# Sort product SKUs by frequency
sorted_skus = sku_frequency.sort_values(ascending=False)

# Display top-selling product SKUs
top_skus = sorted_skus.head(10)  # Display top 10 SKUs
print(top_skus)

# Sort out the most popular size(s) among the customer orders
import pandas as pd
sales_transactions = pd.read_csv('International sale Report.csv')

print(sales_transactions['Size'].unique())

# Remove non-numeric values manually or with a cleaning function
# Here, we'll remove any non-numeric values and replace sizes like 'S', 'M', 'L', 'XL', 'XXL' with corresponding numerical values
size_mapping = {'S': 1, 'M': 2, 'L': 3, 'XL': 4, 'XXL': 5}
sales_transactions['Size'] = sales_transactions['Size'].map(size_mapping)

print(sales_transactions['Size'].dtype)
sales_transactions.dropna(subset=['Size'], inplace=True)
print(sales_transactions['Size'].dtype)

# THE most popular size
most_popular_size = sales_transactions['Size'].value_counts().idxmax()

print("The most popular size is:", most_popular_size)

# Sort out the most repeated customers by their names
import pandas as pd
import re
sales_df = pd.read_csv('International sale Report.csv')

# Check for non-boolean values in the 'CUSTOMER' column
non_boolean_customers = sales_df[~sales_df['CUSTOMER'].str.contains(r'^[A-Za-z]', na=False, flags=re.IGNORECASE)]

print("Non-boolean customers:")
print(non_boolean_customers['CUSTOMER'])

print("\f")

# Remove rows with non-boolean values in the 'CUSTOMER' column
cleaned_sales_df = sales_df.drop(non_boolean_customers.index)

# Extracting the most repeated customers
most_repeated_customers = cleaned_sales_df['CUSTOMER'].value_counts().head().reset_index()

# Rename the columns for clarity
most_repeated_customers.columns = ['Customer Name', 'Count']

print("Most repeated customers after data cleaning:")
print(most_repeated_customers)
import pandas as pd

# Read the CSV file into a DataFrame
sales_df = pd.read_csv('International sale Report.csv')

# Check for non-boolean values in the 'CUSTOMER' column
non_boolean_customers = sales_df[~sales_df['CUSTOMER'].str.contains(r'^[A-Za-z]', na=False)]

# Remove rows with non-boolean values in the 'CUSTOMER' column
cleaned_sales_df = sales_df.drop(non_boolean_customers.index)

# Extracting the most repeated customers
most_repeated_customers = cleaned_sales_df['CUSTOMER'].value_counts().head().reset_index()

# Rename the columns for clarity
most_repeated_customers.columns = ['Customer Name', 'Count']

print("Most repeated customers after data cleaning:")
print(most_repeated_customers)
